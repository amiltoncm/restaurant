<div class="gtco-section">
  <div class="gtco-container">
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-6 animate-box">
          <!-- Mensagem de status -->
          <%- include('./../common/alerts') -%>

          <h3>Entre em Contato</h3>
          <form action="/contacts" method="post">
            <div class="row form-group">
              <div class="col-md-12">
                <label class="sr-only" for="name">Nome</label>
                <input
                  type="text"
                  id="inputName"
                  name="name"
                  class="form-control"
                  placeholder="Seu nome"
                  value="<%= body.name %>"
                />
              </div>
            </div>

            <div class="row form-group">
              <div class="col-md-12">
                <label class="sr-only" for="phone-number"
                  >Telefone / Whats app</label
                >
                <input
                  type="tel"
                  id="inputPhoneNumber"
                  name="phoneNumber"
                  class="form-control"
                  placeholder="Seu celular / whats app (99) 99999-9999"
                  maxlength="15"
                  pattern="\([0-9]{2}\)[\s][0-9]{5}-[0-9]{4}"
                  value="<%= body.phoneNumber %>"
                />
              </div>
            </div>

            <div class="row form-group">
              <div class="col-md-12">
                <label class="sr-only" for="email">E-mail</label>
                <input
                  type="text"
                  id="inputEmail"
                  name="email"
                  class="form-control"
                  placeholder="Seu endereço de e-mail"
                  value="<%= body.email %>"
                />
              </div>
            </div>

            <div class="row form-group">
              <div class="col-md-12">
                <label class="sr-only" for="message">Mensagem</label>
                <textarea
                  id="inputMessage"
                  name="message"
                  cols="30"
                  rows="10"
                  class="form-control"
                  placeholder="Escreva sua mensagem"
                  value="<%= body.message %>"
                ></textarea>
              </div>
            </div>

            <div class="form-group">
              <input
                type="submit"
                value="Enviar"
                name="btSend"
                id="btSend"
                class="btn btn-primary"
              />
            </div>
          </form>
        </div>
        <div class="col-md-5 col-md-push-1 animate-box">
          <div class="gtco-contact-info">
            <h3>Informações de Contato</h3>
            <ul>
              <li class="address">
                Rua 7 de maio, 564 - Itoupava Norte, Bumenau - SC, 89052-050
              </li>
              <li class="phone">
                <a href="tel://1121497360">(47) 99168-9994</a>
              </li>
              <li class="email">
                <a href="mailto:contato@amxsistemas.com.br"
                  >contato@amxsistemas.com.br</a
                >
              </li>
              <li class="url">
                <a href="https://www.amxsistemas.com.br">AMX Sistemas</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
